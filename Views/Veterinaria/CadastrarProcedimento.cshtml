@model Procedimento
@{
    ViewData["title"] = "Cadastrar Procedimento";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Empréstimos</h1>
    </div>
    <form method="post" asp-controller="Veterinaria" asp-action="CadastrarProcedimento">
        <div class="mb-3">
            <label for="Recebedor" class="text-light form-label">Descricao:</label>
            <input type="text" asp-for="Descricao" class="shadow-none form-control" id="exampleInputRecebedor" placeholder="Descreva o procedimento">
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="text-light form-label">Data:</label>
            <input asp-for="Data" type="text" class="form-control shadow-none" id="exampleInputFornecedor">
            <span class="text-danger" asp-validation-for="Data"></span>
        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="text-light form-label">Animal:</label>
            <input asp-for="Animal" type="text" class="form-control shadow-none" id="exampleInputFornecedor" Placeholder="Animal">
            <span class="text-danger" asp-validation-for="Animal"></span>
        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="text-light form-label">Custo:</label>
            <input asp-for="Custo" type="number" step=".01" class="form-control shadow-none" id="exampleInputFornecedor">
            <span class="text-danger" asp-validation-for="Custo"></span>
        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="text-light form-label">Codigo:</label>
            <input asp-for="Codigo" type="text" class="form-control shadow-none" id="exampleInputFornecedor">
            <span class="text-danger" asp-validation-for="Codigo"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Veterinaria" asp-action="Index">Voltar</a>
        </div>
    </form>


</div>