@model Procedimento
@{
    ViewData["title"] = "Editar Procedimento";
}
<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Edição de Procedimentos</h1>
    </div>
    <form method="post" asp-controller="Veterinaria" asp-action="Editar">
        <div class="mb-3">
            <label for="Descricao" class="text-light form-label">Descricao:</label>
            <input type="text" asp-for="Descricao" class="shadow-none form-control" id="exampleInputRecebedor" placeholder="Descreva o procedimento">
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>
        <div class="mb-3">
            <label for="Data" class="text-light form-label">Data:</label>
            <input asp-for="Data" type="datetime" class="form-control shadow-none" id="exampleInputFornecedor">
            <span class="text-danger" asp-validation-for="Data"></span>
        </div>
        <div class="mb-3">
            @* @foreach(var animal in )*@

            <label for="AnimalId" class="text-light form-label">Animal:</label>
            <input asp-for="AnimalId" type="number" class="form-control shadow-none" id="exampleInputFornecedor" Placeholder="Animal">

            <span class="text-danger" asp-validation-for="AnimalId"></span>

        </div>
        <div class="mb-3">
            <label for="Custo" class="text-light form-label">Custo:</label>
            <input asp-for="Custo" type="number" step=".01" class="form-control shadow-none" id="exampleInputFornecedor">
            <span class="text-danger" asp-validation-for="Custo"></span>
        </div>
        <div class="mb-3">
            <label for="Codigo" class="text-light form-label">Codigo:</label>
            <input asp-for="Codigo" type="text" class="form-control shadow-none" id="exampleInputFornecedor">
            <span class="text-danger" asp-validation-for="Codigo"></span>
        </div>
        <div class="mb-3">
            <label for="FuncionarioId" class="text-light form-label">Funcionario:</label>
            <input asp-for="FuncionarioId" type="number" class="form-control shadow-none" id="exampleInputFornecedor">
            <span class="text-danger" asp-validation-for="FuncionarioId"></span>
        </div>
        <div class="mb-3">
            <label for="UltimaAtualizacao" class="text-light form-label">UltimaAtualizacao:</label>
            <input asp-for="UltimaAtualizacao" type="datetime" class="form-control shadow-none" id="exampleInputFornecedor">
            <span class="text-danger" asp-validation-for="UltimaAtualizacao"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Veterinaria" asp-action="Index">Voltar</a>
        </div>
    </form>

