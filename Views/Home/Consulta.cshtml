@model Procedimento
@{
    ViewData["title"] = "Consulta a procedimento";
}

<div class="container ">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Procedimentos</h1>
        <a class="btn btn-success mx-2" asp-controller="Home" asp-action="Index"><i class="bi bi-file-earmark-plus"></i>Voltar</a>
        <a class="btn btn-success mx-2" asp-controller="Veterinaria" asp-action="CadastrarProcedimento"><i class="bi bi-file-earmark-plus"></i>Cadastar Novo Procedimento</a>
    </div>
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

<div class="modal-body">
        <h3> Animal: @Model.AnimalId </h3>
        <p> Descrição: @Model.Descricao </p>
        <h6>Status: </h6>
        @Model.Status
</div>